<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="d-flex">
          <div class="">
            <img src="{{user.image}}" onerror="this.src='https://i.imgur.com/EqBcrs9.png?2'"
              style="width: 260px; height: 260px; border-radius:25%" />
          </div>
          <div class="mt-3 mx-5" style="line-height: 10px ;">
            <h2>{{user.name}}</h2>
            <p>{{user.email}}</p>
            <p>{{#if comments}} {{comments.length}} {{else}} 0 {{/if}} 已評論餐廳</p>
            <p>{{#if user.FavoritedRestaurants}} {{user.FavoritedRestaurants.length}} {{else}} 0 {{/if}} 收藏的餐廳</p>
            <p>{{#if user.Followings}} {{user.Followings.length}} {{else}} 0 {{/if}} followings(追蹤者)</p>
            <p>{{#if user.Followers}} {{user.Followers.length}} {{else}} 0 {{/if}} followers(追隨者)</p>
            <a href="/users/{{ user.id }}/edit" class="btn btn-primary">Edit</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6 mt-5">
      <div class="card">
        <div class="card-head bg-light border p-2 " style="font-size:x-large; height: 60px;">
          {{#if user.Followings.length}} {{user.Followings.length}} {{else}} 0 {{/if}}followings(追蹤者)
        </div>
        <div class="card-body">
          {{#each user.Followings}}
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="" onerror="this.src='https://i.imgur.com/EqBcrs9.png?2'" class="mx-2" style="width: 70px; height: 70px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-6 mt-5">
      <div class="card">
        <div class="card-head bg-light border p-2 " style="font-size:x-large; height: 60px;">
          {{#if comments.length}} {{comments.length}} {{else}} 0 {{/if}}已評論餐廳
        </div>
        <div class="card-body">
          {{#each comments}}
          <a href="/restaurants/{{this.restaurantId}}">
            <img src="{{this.Restaurant.image}}" alt="" class="mx-2" style="width: 70px; height: 70px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-6 mt-5">
      <div class="card">
        <div class="card-head bg-light border p-2 " style="font-size:x-large; height: 60px;">
          {{#if user.Followers.length}} {{user.Followers.length}} {{else}} 0 {{/if}}followers(追隨者)
        </div>
        <div class="card-body">
          {{#each user.Followers}}
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" alt="" onerror="this.src='https://i.imgur.com/EqBcrs9.png?2'" class="mx-2"
              style="width: 70px; height: 70px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-6 mt-5">
      <div class="card">
        <div class="card-head bg-light border p-2 " style="font-size:x-large; height: 60px;">
          {{#if user.FavoritedRestaurants.length}} {{user.FavoritedRestaurants.length}} {{else}} 0 {{/if}}收藏的餐廳
        </div>
        <div class="card-body">
          {{#each user.FavoritedRestaurants}}
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" alt="" class="mx-2" style="width: 70px; height: 70px;">
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>